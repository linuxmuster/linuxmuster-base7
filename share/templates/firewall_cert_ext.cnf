[ req ]
default_bits = 2048
prompt = no
default_md = sha256
req_extensions = req_ext
distinguished_name = dn

[ dn ]
CN = @@realm@@
OU = @@sambadomain@@
O = @@schoolname@@

[ req_ext ]
subjectAltName = @alt_names
keyUsage = critical, digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth

[ alt_names ]
DNS.1 = firewall.@@domainname@@
DNS.2 = firewall
IP.1 = @@firewallip@@
